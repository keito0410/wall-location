<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<% @users.each do |user| %>
<!-- 写真か名前クリックするとユーザーの詳細ページに移行 -->
<%= link_to user_path(user) do %>
<%= attachment_image_tag user, :profile_image_id, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
<%= user.name %>
<% end %>


<% end %>
